<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yulong.easypan.mappers.FileInfoMapper">
    <insert id="insert">
        insert into file_info values
            (
                #{userId},
                #{fileId},
                #{fileMd5},
                #{filePid},
                #{fileSize},
                #{fileName},
                #{fileCover},
                #{filePath},
                #{createTime},
                #{lastUpdateTime},
                #{folderType},
                #{fileCategory},
                #{fileType},
                #{status},
                #{recoveryTime},
                #{delFlag}
            )
    </insert>
    <update id="updateStautusAndCover">
        update file_info
        <set>
            <!-- 文件MD5 -->
            <if test="updatefile.fileMd5 != null and updatefile.fileMd5 != ''">
                file_md5 = #{updatefile.fileMd5},
            </if>

            <!-- 父级ID -->
            <if test="updatefile.filePid != null and updatefile.filePid != ''">
                file_pid = #{updatefile.filePid},
            </if>

            <!-- 文件大小 -->
            <if test="updatefile.fileSize != null">
                file_size = #{updatefile.fileSize},
            </if>

            <!-- 文件名称 -->
            <if test="updatefile.fileName != null and updatefile.fileName != ''">
                file_name = #{updatefile.fileName},
            </if>

            <!-- 封面 -->
            <if test="updatefile.fileCover != null and updatefile.fileCover != ''">
                file_cover = #{updatefile.fileCover},
            </if>

            <!-- 文件路径 -->
            <if test="updatefile.filePath != null and updatefile.filePath != ''">
                file_path = #{updatefile.filePath},
            </if>

            <!-- 创建时间 -->
            <if test="updatefile.createTime != null and updatefile.createTime != ''">
                create_time = #{updatefile.createTime},
            </if>

            <!-- 最后更新时间 -->
            <if test="updatefile.lastUpdateTime != null and updatefile.lastUpdateTime != ''">
                last_update_time = #{updatefile.lastUpdateTime},
            </if>

            <!-- 是否文件夹 -->
            <if test="updatefile.folderType != null">
                folder_type = #{updatefile.folderType},
            </if>

            <!-- 文件大类 -->
            <if test="updatefile.fileCategory != null">
                file_category = #{updatefile.fileCategory},
            </if>

            <!-- 文件细分类型 -->
            <if test="updatefile.fileType != null">
                file_type = #{updatefile.fileType},
            </if>

            <!-- 转码状态 -->
            <if test="updatefile.status != null">
                status = #{updatefile.status},
            </if>

            <!-- 回收站时间 -->
            <if test="updatefile.recoveryTime != null and updatefile.recoveryTime != ''">
                recovery_time = #{updatefile.recoveryTime},
            </if>

            <!-- 删除标记 -->
            <if test="updatefile.delFlag != null">
                del_flag = #{updatefile.delFlag},
            </if>
        </set>
        where file_id = #{file_Id} and user_id = #{user_Id} and status = #{oldstatus}
    </update>

    <select id="LoadDateList" resultType="com.yulong.easypan.entity.vo.FileInfoVO">
        select * from file_info
        <where>
            <if test="fileId != null and fileId != ''">
